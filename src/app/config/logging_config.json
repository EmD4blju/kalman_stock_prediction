{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "class": "colorlog.ColoredFormatter",
      "format": "%(log_color)s %(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "standard",
      "level": "DEBUG",
      "stream": "ext://sys.stdout"
    }
  },
  "loggers": {
    "main": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "data_repository": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "data_preparator": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "dataset": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    }
  }
}
